				<th>등록일</th>
			</tr>
		</thead>
		<tbody>
		<%
			 for(var i=0; i<rows.length; i++) {
		%>
			<tr>
				<td><%=rows[i].BRDNO%></td>
				<td><a href='/board1/read?brdno=<%=rows[i].BRDNO%>'><%=rows[i].BRDTITLE%></a></td>
				<td><%=rows[i].BRDWRITER%></td>
				<td><%=rows[i].BRDDATE%></td>
			</tr>
		<%
			 }
		%>
		</tbody>
	</table>
</body>
</html>
